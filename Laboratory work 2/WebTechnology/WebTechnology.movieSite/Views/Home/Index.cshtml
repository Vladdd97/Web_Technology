
@{
    ViewBag.Title = "Home";
}

@Html.Partial("_Carousel")
<!-- content container -->
<div class="container-fluid" id="content">

    <!-- row -->
    <div class="row">

        @for (int i = 0; i < 6; i++)
        {
            <div class="col-lg-4 col-sm-6 col-xs-12 mb-2 px-2">
                <div class="card">
                    <img class="card-img-top img-fluid" src="~/Content/images/batmanVSsuperman.jpg" alt="Card image">
                    <div class="card-body">
                        <h4 class="card-title p-1">Batman vs Superman</h4>
                        <p class="card-text p-1">
                            Fearing that the actions of Superman are left unchecked,
                            Batman takes on the Man of Steel, while the world wrestles with what
                            kind of a hero it really needs.
                        </p>
                        <a href="#" class="btn btn-info float-right m-1">See Details</a>
                    </div>
                </div>
            </div>
        }

    </div><!-- row -->

</div>
<!-- /content container -->